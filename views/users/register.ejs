<% layout('layouts/boilerplate')%>
<div style=" height:90vh;">
<div class="container border border-psecondary shadow-lg bg-body rounded " style="width:500px; height:auto;">
    <div class="mt-1">
    <form action="/register" method="POST" class="validated-form m-3 bg-none" novalidate>
      <ul class="text-center">
      <a href=""><svg xmlns="http://www.w3.org/2000/svg" width="66" height="66" fill="currentColor" class="bi bi-person-circle mr-4 pt-2" viewBox="0 0 16 16">
        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
        <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
      </svg></a>
      <h4 class="pr-4">REGISTER</h4>
    </ul>
        <div class="contain">
            <label class="form-label text-dark" for="username">Username</label>
            <input style="height:30px" class="form-control" type="text" id="username" placeholder="" name="username" required>
        </div>
        <div class="mb-1">
            <label class="form-label text-dark" for="email">E-mail</label>
            <input style="height:30px" class="form-control" type="email" id="email" placeholder="" name="email" required>
        </div>
        <div class="mb-3">
            <label class="form-label text-dark" for="password">Password</label>
            <input style="height:30px" class="form-control " type="password" id="password" placeholder="" name="password" required>
        </div>
        <div class="mb-3 pb-3 ">
            <label class="form-label text-dark" for="confirmPassword">Confirm password</label>
            <input style="height:30px" class="form-control mb-3 " type="password" id="confirmPassword" placeholder="" name="confirmPassword" required>
            <a class="text-decoration-none" href="/login">Already have an account!</a>
        <button class="btn btn-success form-control my-3" onclick="registerUser()">Register</button>
      </div>
     </div>
    </form>
  </div>
