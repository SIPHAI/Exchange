<% layout('layouts/boilerplate')%>


<div class="row">
  <% for (let book of books){%>
  <div class="col-4">
    <div class="card border-0">
      <img
        class="img-fluid shadow-sm p-4 mb-5 bg-body rounded"
        style="height: 500px;"
        alt=""
        src="<%= book.images[0].url%>"/>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= book.title %></h5>
        <p class="card-text"><%= book.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= book.location%></small>
        </p>
        <a class="btn btn-info" href="/books/<%=book._id%>"
          >See Details</a
        >
      </div>
    </div>
  </div>
  <% }%>
</div>
